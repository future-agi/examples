# NotebookLM Backend Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///notebooklm.db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# Alternative LLM Providers (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# File Upload Configuration
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size

# Audio/TTS Configuration
TTS_PROVIDER=openai  # openai, elevenlabs, or local
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=notebooklm.log

# Production Settings (set these in production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# DATABASE_URL=postgresql://user:password@localhost/notebooklm

